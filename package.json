{
  "name": "viking-garage-api",
  "version": "0.0.1",
  "description": "VIKING GARAGE API",
  "scripts": {
    "init": "scripts/initialize.sh",
    "dev": "nodemon --watch src --exec 'ts-node' src/server.ts",
    "test": "npm run createdb && npm run build && npm run lint && mocha -r ts-node/register ./src/tests/**/*.spec.ts",
    "tdd": "npm run build && mocha --watch --watch-extensions ts,tsx -r ts-node/register ./src/tests/**/*.spec.ts",
    "start": "npm run build && node ./dist/server.js",
    "createdb": "ts-node ./src/sequelize/mockups/index.ts",
    "build": "npm run swagger-gen && npm run routes-gen && tsc",
    "lint": "tslint ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts",
    "swagger-gen": "$(npm bin)/tsoa swagger",
    "routes-gen": "$(npm bin)/tsoa routes",
    "copy": "cp src/config.ts.example src/config.ts",
    "postinstall": "npm run copy && npm run create-dist && npm run copy-template && npm run copy-swagger && npm run build",
    "create-dist": "mkdirp dist/swagger-ui",
    "copy-swagger": "ncp ./node_modules/swagger-ui/dist ./dist/swagger-ui",
    "copy-template": "ncp ./src/express.js ./node_modules/tsoa/dist/routeGeneration/templates/express.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michalmikolajczyk/viking-garage-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/michalmikolajczyk/viking-garage-api/issues"
  },
  "homepage": "https://github.com/michalmikolajczyk/viking-garage-api#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "debug": "^2.6.1",
    "express": "^4.14.1",
    "method-override": "^2.3.7",
    "nodemailer": "^3.1.3",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pg": "^6.1.2",
    "sequelize": "^3.30.2",
    "tsoa": "1.0.19",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.34",
    "@types/chai": "^3.4.35",
    "@types/chai-http": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/mocha": "^2.2.39",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.3",
    "@types/passport-jwt": "^2.0.19",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.11.0",
    "swagger-ui": "^2.2.10",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "tslint-config-airbnb": "^1.0.0",
    "typescript": "^2.1.6",
    "walk-sync": "^0.3.1"
  }
}
